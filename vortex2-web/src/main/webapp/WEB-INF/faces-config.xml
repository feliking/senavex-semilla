<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.3" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd">
    <application>
        <locale-config>
            <default-locale>es_BO</default-locale>
        </locale-config>
        <resource-bundle>
            <base-name>bo.gob.senavex.vortex2.page</base-name>
            <var>PAGE</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>bo.gob.senavex.vortex2.label</base-name>
            <var>LBL</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>bo.gob.senavex.vortex2.button</base-name>
            <var>BTN</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>bo.gob.senavex.vortex2.message</base-name>
            <var>MSG</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>bo.gob.senavex.vortex2.text</base-name>
            <var>TXT</var>
        </resource-bundle>
        <locale-config>
            <default-locale>es</default-locale>
            <supported-locale>es</supported-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
    </application>
    <managed-bean>
        <managed-bean-name>_config</managed-bean-name>
        <managed-bean-class>bo.gob.senavex.vortex2.bean.AppConfigBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/publico/home.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/publico/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/publico/logout.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
</faces-config>
